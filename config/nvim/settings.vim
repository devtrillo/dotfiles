" set leader key
let g:mapleader = "\<Space>"

syntax enable

set noerrorbells
set smartcase
set noswapfile
set undodir=~/.vim/undodir
set undofile
set hidden
set nowrap
set incsearch

set splitbelow
set splitright
set tabstop=2
set shiftwidth=2
set smarttab
set expandtab
set autoindent
set laststatus=0
set number relativenumber
set updatetime=300
set timeoutlen=500
set nobackup
set nowritebackup

set colorcolumn=80
set encoding=UTF-8

highlight ColorColumn ctermbg=0 guibg=lightgrey

