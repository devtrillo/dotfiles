# LS
alias la="ls -la"
alias cdh="cd $(git rev-parse --show-toplevel)"
# GIT
alias g="git"
alias lg="lazygit"
alias gi="g init"
alias ga="g add"
alias gclean="g branch | grep -v \"master\" | xargs git branch -D"
alias gs="g status"
alias lgc="ll commit"
alias gc="g commit"
alias gcp="ll commit -p"
alias gcnv="gc --no-verify"
alias gp="g push -u origin HEAD"
alias gP="g pull"
alias gf="g flow"
alias gfli="gf init"
alias gflfs="gf feature start"
alias gflff="gf feature finish"

# Colorize grep output (good for log files)
alias grep='grep --color=auto'
alias egrep='egrep --color=auto'
alias fgrep='fgrep --color=auto'

# confirm before overwriting something
alias cp="cp -i"
alias mv='mv -i'
alias rm='rm -i'

#ZOXIDE
alias cd="z"
alias cdi="zi"
#NVM
alias save-nvm-version="node -v > .nvmrc"

#NVM
alias vsc="code ."

# NVIM
alias vi="nvim"
alias vim="nvim"

alias zsh-update-plugins="find "$ZDOTDIR/plugins" -type d -exec test -e '{}/.git' ';' -print0 | xargs -I {} -0 sh -c 'echo updating repo: {}; git -C {} pull'"


#LIFELINK
alias mfa='~/lifelink/ops/mfa.sh'
alias startAll='cd ~/lifelink/getstarted/; ./startAll.sh'
alias ll='~/Documents/Personal/devtrillo-cli/dist/cli.js'

#SPOTIFY
alias s="spotify"
alias play="spotify play"
alias pause="spotify pause"
alias ai="octave --gui"

export SDKMAN_DIR="/Users/devtrillo/.sdkman"
[[ -s "/Users/devtrillo/.sdkman/bin/sdkman-init.sh" ]] && source "/Users/devtrillo/.sdkman/bin/sdkman-init.sh"

